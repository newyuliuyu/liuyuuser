<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.liuyu.bs.dao.GradeMasterDao">

    <insert id="add">
      insert into b_gradeMaster(orgCode,teacherCode,gradeId)
      values(#{gradeMaster.org.code},#{gradeMaster.teacher.code},#{gradeMaster.grade.id})
    </insert>
    <insert id="adds">
        insert into b_gradeMaster(orgCode,teacherCode,gradeId)
        values
        <foreach collection="gradeMasters" item="gradeMaster" index="index" separator=",">
            (#{gradeMaster.org.code},#{gradeMaster.teacher.code},#{gradeMaster.grade.id})
        </foreach>
    </insert>

    <delete id="delete">
        delete from b_gradeMaster
         where teacherCode=#{gradeMaster.teacher.code}
         and gradeId=#{gradeMaster.grade.id}
    </delete>

    <resultMap id="gradeMasterMap" type="com.liuyu.bs.business.GradeMaster">
        <id property="id" column="id"/>
        <association property="teacher" javaType="com.liuyu.bs.business.Teacher">
            <id property="code" column="teacherCode"/>
            <result property="name" column="teacherName"/>
            <result property="account" column="account"/>
        </association>
        <association property="org" javaType="com.liuyu.bs.business.Org">
            <id property="code" column="orgCode"/>
            <result property="name" column="orgName"/>
        </association>
        <association property="grade" javaType="com.liuyu.bs.business.Grade">
            <id property="id" column="gradeId"/>
            <result property="name" column="gradeName"/>
            <result property="enterSchoolYear" column="enterSchoolYear"/>
            <result property="learnSegment" column="learnSegment"/>
        </association>
    </resultMap>
    <select id="queryClazzMaster" resultMap="gradeMasterMap">
        select a.id,
        a.subjectName,
        a.orgCode,
        b.name as orgName,
        a.teacherCode,
        e.name as teacherName,
        e.account,
        a.gradeId,
        c.name as gradeName,
        c.enterSchoolYear,
        c.learnSegment
        from b_teaching_teacher a
        left join b_org b on a.orgCode=b.code
        left join  b_org_grade c on a.gradeId=c.id
        left join b_teacher e on a.teacherCode=e.code
        where a.orgCode=#{orgCode}
    </select>

</mapper>
